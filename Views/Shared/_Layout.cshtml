<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComicBookGallery</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComicBookGallery.styles.css" asp-append-version="true" />
</head>
<body style="background-image: url('@Url.Content(ViewBag.ImageUrl)'); background-size: 75%; background-position: center; background-repeat: no-repeat; margin: 0 auto; display: block;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ComicBookGallery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <div class="btn-group m-2">
                            <button type="button" class="btn btn-secondary dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                                Comic Books
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-controller="ComicBook" class="dropdown-item text-primary">All Comic Books</a></li>
                            </ul>
                        </div>
                        <div class="btn-group m-2">
                            <button type="button" class="btn btn-secondary dropdown-toggle text-white ml-2 mr-2" data-bs-toggle="dropdown" aria-expanded="false">
                                Authors
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-action="GetAuthors" asp-controller="ComicBook" class="dropdown-item text-primary">All Authors</a></li>
                            </ul>
                        </div>
                        <div class="btn-group m-2">
                            <button type="button" class="btn btn-secondary dropdown-toggle text-white ml-2 mr-2" data-bs-toggle="dropdown" aria-expanded="false">
                                Publishers
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-action="PublisherList" asp-controller="ComicBook" class="dropdown-item text-primary">All Publishers</a></li>
                            </ul>
                        </div>
                        <div class="btn-group m-2">
                            <button type="button" class="btn btn-success dropdown-toggle text-white ml-2 mr-2" data-bs-toggle="dropdown" aria-expanded="false">
                                Accounts
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Login" asp-controller="Account" class="dropdown-item text-primary">Login</a></li>
                                <li><a asp-action="Register" asp-controller="Account" class="dropdown-item text-primary">Register</a></li>
                            </ul>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            <div class="overlay">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer mt-auto py-3 text-white bg-primary">
        <div class="container-fluid">
            &copy; 2024 - ComicBookGallery - Kevin Stradtman
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.0.1/vue.min.js"></script>
    <script src="~/js/VueApp.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
